<view class="pics"><scroll-view class="left" scroll-y><block s-for="{{cates}}" s-for-item="item" s-for-index="index" s-key="id"><view data-event-opts="{{[['tap',[['leftClickHandle',[index,'$0'],[[['cates','id',item.id,'id']]]]]]]}}" class="{{[active==index?'active':'']}}" bindtap="__e">{{item.title}}</view></block></scroll-view><scroll-view class="right" scroll-y><block s-for="{{secondData}}" s-for-item="item" s-for-index="index" s-key="index"><view class="item"><image src="{{item.img_url}}" data-event-opts="{{[['tap',[['priviewImg',['$0'],[[['secondData','',index,'img_url']]]]]]]}}" bindtap="__e"></image><text>{{item.title}}</text></view></block><block s-if="{{secondData.length==0}}"><text>暂无数据</text></block></scroll-view></view>